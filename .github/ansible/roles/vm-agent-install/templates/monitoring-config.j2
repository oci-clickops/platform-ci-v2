# Monitoring Agent Configuration
# Generated by Ansible GitOps

server:
  endpoint: {{ agent.config.metrics_endpoint }}
  collection_interval: {{ agent.config.collection_interval }}

agent:
  version: {{ agent.version }}
  hostname: {{ inventory_hostname }}
  instance_id: {{ oci_ocid }}

metrics:
  - system_cpu
  - system_memory
  - system_disk
  - system_network

logging:
  level: info
  file: /var/log/monitoring-agent/agent.log
